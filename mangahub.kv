<TextItem>:
	canvas.before:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos: self.pos
			size: self.size
		Color:
			rgba: 0,0,0,0.1
		Line:
			width: 1.1
			points: self.x,self.y,self.x+self.width,self.y
	orientation: 'horizontal'
	size_hint_y: None
	height: label_manga_title.height
	spacing: 16
	Label:
		color: 0,0,0,1
		markup: True
		text: '[b]>>>[/b]'
		padding: 0,8
		font_size: 24
		size_hint: None,None
		size: self.texture_size
	Label:
		id: label_manga_title
		padding: 8,8
		color: 0,0,0,1
		text: root.text
		font_size: 24
		text_size: self.size
		size_hint_y: None
		height: self.texture_size[1]
<TextHomeScreen>:
	orientation: 'vertical'
	titles: root.getSeries("F:\Manga")
	canvas.before:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos: self.pos
			size: self.size
	padding: 8,0,8,8
	ScrollView:
		do_scroll_x: False
		do_scroll_y: True
		GridLayout:
			cols: 1
			id: layout_catalog
			size_hint_y: None
			height: self.minimum_height
			orientation: 'tb-lr'
			spacing: 1
			padding: 16,8	,24,8
	Button:
		id: btn_add
		text: "Add New Series"
		size_hint_y: None
		height: 50
