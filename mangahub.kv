## homescreen.py
<TextItem>:
	canvas.before:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos: self.pos
			size: self.size
		Color:
			rgba: 0,0,0,0.1
		Line:
			width: 1.1
			points: self.x,self.y,self.x+self.width,self.y
	orientation: 'horizontal'
	size_hint_y: None
	height: label_manga_title.height
	spacing: 16
	Label:
		color: 0,0,0,1
		markup: True
		text: '[b]>>>[/b]'
		padding: 0,8
		font_size: 24
		size_hint: None,None
		size: self.texture_size
	Button:
		id: label_manga_title
		background_normal: ''
		background_color: 1,1,1,1
		padding: 8,8
		color: 0,0,0,1
		text: root.text
		font_size: 24
		text_size: self.size
		size_hint_y: None
		height: self.texture_size[1]
		on_release: root.buttonClicked(self)
<TextHomeScreen>:
	name: 'texthomescreen'
	BoxLayout:
		orientation: 'vertical'
		canvas.before:
			Color:
				rgba: 1,1,1,1
			Rectangle:
				pos: self.pos
				size: self.size
		padding: 8,0,8,8
		ScrollView:
			do_scroll_x: False
			do_scroll_y: True
			GridLayout:
				cols: 1
				id: layout_catalog
				size_hint_y: None
				height: self.minimum_height
				spacing: 1
				padding: 16,8	,24,8
		Button:
			id: btn_add
			on_release: root.openSourcesDialog(self)
			text: "Manage Sources"
			size_hint_y: None
			height: 50

## library.py
<SourcesDialogLabel>:
	text_size: self.size
	size_hint_y: None
	height: self.texture_size[1]
	padding: 8,4
	halign: 'left'
	shorten: True

<SourcesDialogContent>:
	canvas:
		Color:
			rgba: 0,0,0,1
		Rectangle:
			pos: self.pos
			size: self.size
	padding: 12,12,12,12
	titles: root.getValidSources()
	BoxLayout:
		canvas:
			Color:
				rgba: 1,0,0,0
			Rectangle:
				pos: self.pos
				size: self.size
		orientation: 'horizontal'
		spacing: 10
		AnchorLayout:
			anchor_x: 'left'
			anchor_y: 'top'
			canvas:
				Color:
					rgba: 0,0,1,0
				Rectangle:
					pos: self.pos
					size: self.size
			BoxLayout:
				id: current_sources
				orientation: 'vertical'
				canvas:
					Color:
						rgba: 1,1,1,0.3
					Line:
						rectangle: self.x,self.y,self.width,self.height
				size_hint_y: None
				height: self.width*2
		AnchorLayout:
			anchor_y: 'top'
			Button:
				text: 'Add Source'
				on_release: root.buttonPressed(self)
				size_hint: 1,None
				size: self.texture_size
				padding: 24,8
	AnchorLayout:
		anchor_y: 'bottom'
		anchor_x: 'right'
		Button:
			id: btn_cls
			text: 'Close'
			padding: 16,8
			size_hint: None, None
			size: self.texture_size
## imageviewscreen.py
<ImageScreen>:
	Image:
		source: root.src
<ImageViewScreen>:
	name: 'imageviewscreen'
	BoxLayout:
		orientation: 'vertical'
		FloatLayout:
			size_hint: 1,None
			height: 50
			canvas:
				Color:
					rgba: 1,0,0,0
				Rectangle:
					pos: self.pos
					size: self.size
			Spinner:
				id: spinner_chapter
				pos_hint: {'x':0,'top':1}
				size_hint_x: None
				width: 300
			Spinner:
				id: spinner_page
				pos_hint: {'right':1,'top':1}
				size_hint_x: None
				width: 300
		BoxLayout:
			orientation: 'horizontal'
			Button:
				id: chapter_prev
				text: '<<<'
				size_hint_x: None
				size_hint_y: 0.4
				pos_hint: {'center_y':0.5}
				on_release: root.prevChapter(self)
			ScreenManager:
				id: images_manager
			Button:
				id: chapter_next
				text: '>>>'
				size_hint_x: None
				size_hint_y: 0.4
				pos_hint: {'center_y':0.5}
				on_release: root.nextChapter(self)
## seriesscreen.py
<ChapterLabel>:
	text_size: self.size
	size_hint_y: None
	height: self.texture_size[1]
	padding: 8,4
	halign: 'center'
<SeriesScreen>:
	name: 'seriesscreen' #try making of form series_seriesname
	BoxLayout:
		orientation: 'vertical'
		Label:
			id: chapter_name
			text: '[b]Series Name Here[/b]'
			markup: True
			size_hint_y: None
		ScrollView:
			do_scroll_x: False
			do_scroll_y: True
			GridLayout:
				cols: 1
				id: chapters_list
				size_hint_y: None
				height: self.minimum_height
				spacing: 1
				padding: 16,8,24,8
